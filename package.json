{
  "name": "@abatech/boilerplate",
  "scripts": {
    "start": "webpack serve --port 8080",
    "start:standalone": "vite --port 8080 ",
    "build": "vite build",
    "analyze": "webpack --mode=production --env analyze",
    "lint": "eslint . --fix --max-warnings=0  --quiet",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test": "cross-env BABEL_ENV=test jest",
    "watch-tests": "cross-env BABEL_ENV=test jest --watch",
    "prepare": "husky install",
    "coverage": "cross-env BABEL_ENV=test jest --coverage",
    "build:types": "tsc",
    "type": "module"
  },
  "repository": {
    "url": "git@github.com:abacenters/aba-mfe-boilerplate.git",
    "type": "git"
  },
  "release": {
    "branches": [
      "master"
    ],
    "anaylzeCommits": {
      "minor": [
        "feat",
        "refactor",
        "test",
        "revert",
        "build"
      ],
      "patch": [
        "fix",
        "perf",
        "docs",
        "style",
        "chore",
        "ci"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.15.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/lodash": "^4.14.195",
    "@types/node-sass": "^4.11.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@vitejs/plugin-react": "^2.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "babel-jest": "^27.0.6",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-modules-typescript-loader": "^4.0.1",
    "dotenv": "^16.3.1",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.6",
    "jest-cli": "^27.0.6",
    "lint-staged": "^13.2.2",
    "node-sass": "^9.0.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "sass-loader": "^13.3.2",
    "semantic-release": "^18.0.0",
    "serve": "^12.0.1",
    "single-spa-layout": "^2.1.0",
    "style-loader": "^3.3.3",
    "ts-config-single-spa": "^3.0.0",
    "ts-loader": "^9.4.3",
    "typescript": "^4.3.5",
    "vite": "^3.0.0",
    "vite-plugin-dynamic-import": "^1.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.8.0",
    "webpack-config-single-spa-react": "^4.0.0",
    "webpack-config-single-spa-react-ts": "^4.0.0",
    "webpack-config-single-spa-ts": "^4.0.0",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@reduxjs/toolkit": "^1.9.5",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "@types/systemjs": "^6.1.1",
    "@types/webpack-env": "^1.16.2",
    "axios": "^1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.1",
    "react-router-dom": "^5.3.4",
    "redux-persist": "^6.0.0",
    "redux-persist-transform-encrypt": "^5.0.0",
    "sass": "^1.63.4",
    "single-spa": "^5.9.5",
    "single-spa-react": "^4.3.1",
    "sweetalert2": "^11.7.12"
  },
  "types": "dist/aba-boilerplate.d.ts",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/github",
    "@semantic-release/git"
  ]
}
